#!/bin/bash

debug_mode=false

# Parse command line arguments
for arg in "$@"; do
    case $arg in
        --debug=on)
        debug_mode=true
        shift
        ;;
        *)
        shift
        ;;
    esac
    case $arg in
        --debug=off)
        debug_mode=false
        # release_mode=true
        shift
        ;;
        *)
        shift
        ;;
    esac
done

disable_ccdebug() {
    sed -i 's/^CCBUILD = -g -O0/CCBUILD = -O2/' ../conf/target.conf
}

enable_ccdebug() {
    sed -i 's/^CCBUILD = -O2/CCBUILD = -g -O0/' ../conf/target.conf
}

# if [ "$release_mode" = true ]; then
#     echo "Release mode enabled."
#     disable_ccdebug
#     exit
# else
#     echo "Debug mode enabled."
#     enable_ccdebug
#     exit
# fi

if [ "$debug_mode" = true ]; then
    echo "Debug mode enabled."
    enable_ccdebug
    exit
else
    echo "Release mode enabled."
    disable_ccdebug
    exit
fi

echo "Configuration complete."
